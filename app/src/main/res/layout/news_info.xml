<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewGroup"
    android:layout_margin="20dp"
    tools:context="com.example.android.newsapp.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="News Subject"
        android:id="@+id/textViewNewsName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Type"
        android:id="@+id/textViewType"
        android:layout_below="@+id/textViewNewsName"
        android:layout_alignLeft="@+id/textViewNewsName"
        android:layout_alignStart="@+id/textViewNewsName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginBottom="10dp"
        android:text="contributor"
        android:id="@+id/textViewContributer"
        android:layout_below="@+id/textViewType"
        android:layout_alignLeft="@+id/textViewType"
        android:layout_alignStart="@+id/textViewType" />
</RelativeLayout>